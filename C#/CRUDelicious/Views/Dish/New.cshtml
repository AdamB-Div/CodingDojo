@model Dish
@{
    ViewData["Title"] = "New Dish Page";
}

<div class="text-center mb-5">
    <h3 class="display-4">Add a new Dish</h3>
</div>

<form asp-controller="Dish" asp-action="Create" method="POST">
    <div class="d-flex">
        <div class="col-4">
            <div class="mb-4">
                <label asp-for="Chef" class="mb-2 form-label"></label><br>
                <span asp-validation-for="Chef"></span>
                <input asp-for="Chef" class="form-control">
            </div>

            <div class="mb-4">
                <label asp-for="Name" class="mb-2 form-label"></label><br>
                <span asp-validation-for="Name"></span>
                <input asp-for="Name" class="form-control">
            </div>

            <div class="mb-4">
                <label asp-for="Calories" class="mb-2 form-label"></label><br>
                <span asp-validation-for="Calories"></span>
                <input type="number" asp-for="Calories" class="form-control" value="0">
            </div>
        </div>

        <div class="col-4 text-center">
            <div class="row d-flex justify-content-center">
                <label asp-for="Tastiness" class="mb-2 form-label"></label><br>
                <span asp-validation-for="Tastiness"></span>
                <select class="form-select w-auto" asp-for="Tastiness">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
            </div>

        </div>

        <div class="col-4">
            <div class="row">
                <label asp-for="Description" class="mb-2 form-label"></label><br>
                <textarea asp-for="Description" class="form-control" style="height: 200px"></textarea>
            </div>

        </div>
    </div>

    <button type="submit" class="btn btn-primary mt-4 col-2" style="margin-right: 18%;">Submit</button>    
</form>