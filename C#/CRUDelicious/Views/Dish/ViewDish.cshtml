@model Dish
@{
    ViewData["Title"] = "View Dish";
}

<div class="text-center my-5">
    <h1 class="display-4">@Model.Name</h1>
</div>

<div class="text-center my-5">
    <h5 class="display-6">@Model.Chef</h5>
</div>

<hr class="m-auto mb-5" style="width: 80%;">

<div>
    <p class="lead" style="font-size: 25px;">@Model.Description</p>
</div>

<div>
    <p class="lead"><strong>Calories:</strong> @Model.Calories</p>
</div>

<div>
    <p class="lead"><strong>Tastiness:</strong> @Model.Tastiness</p>
</div>

<div class="row justify-content-around mt-5">
    <form asp-controller="Dish" asp-action="DeleteDish" asp-route-dishId="@Model.DishId" class="col-2" method="POST">
        <button class="btn btn-danger col-12">Delete</button>
    </form>

    <a asp-controller="Dish" asp-action="EditDish" asp-route-dishId="@Model.DishId" class="btn btn-primary col-2">Edit</a>
</div>