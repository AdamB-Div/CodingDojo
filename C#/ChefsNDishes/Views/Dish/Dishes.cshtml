@model List<Dish>
@{
    ViewData["Title"] = "Dishes Page";
}

<div class="row d-flex justify-content-between align-items-center">
    <h1 class="display-4 col-10">Yum, take a look at our tasty dishes!</h1>

    <a class="btn btn-primary col-2" style="max-height: 40px;" asp-controller="Dish" asp-action="AddDish">Add A Dish</a>
</div>

<hr class="col-8">

<div class="row col-10">
    <table class="table table-striped border border-dark">
        <thead>
            <tr>
                <th>Name</th>
                <th>Chef</th>
                <th>Tastiness</th>
                <th>Calories</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Dish dish in Model)
            {
                <tr>
                    <td>@dish.DishName</td>
                    <td>@dish.Creator.FullName()</td>
                    <td>@dish.Tastiness</td>
                    <td>@dish.Calories</td>
                </tr>
            }
        </tbody>
    </table>
</div>