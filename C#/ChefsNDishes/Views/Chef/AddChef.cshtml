@model Chef
@{
    ViewData["Title"] = "Add Chef Page";
}

<div class="text-center mb-5">
    <h1 class="display-4">Add a Chef!</h1>
</div>

<form asp-controller="Chef" asp-action="CreateChef" class="row g-3" method="POST">
    <div class="col-6">
        <div class="mb-3">
            <label asp-for="FirstName"></label>
            <span asp-validation-for="FirstName"></span>
            <input asp-for="FirstName" class="form-control w-50">
        </div>

        <div>
            <label asp-for="LastName"></label>
            <span asp-validation-for="LastName"></span>
            <input asp-for="LastName" class="form-control w-50">
        </div>
    </div>

    <div class="col-6">
        <div class="mb-3">
            <label asp-for="DateOfBirth"></label>
            <span asp-validation-for="DateOfBirth"></span>
            <input asp-for="DateOfBirth" class="form-control w-50">
        </div>
        
        <input type="submit" value="Add Chef" class="btn btn-primary mt-4 col-3">
    </div>
</form>