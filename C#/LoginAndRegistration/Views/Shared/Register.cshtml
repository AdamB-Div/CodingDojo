@model User
@{
    ViewData["Title"] = "Register Page";
}

<div class="">
    <h1 class="display-4">Register to this Cool Site!</h1>
</div>

<div class="row justify-content-end">
    <a asp-controller="User" asp-action="Login" class="btn btn-success col-2">Login</a>
</div>

<form asp-controller="User" asp-action="RegisterUser" method="POST">
    <div class="row d-flex mb-4">
        <div class="col-5">
            <label asp-for="FirstName"></label>
            <span asp-validation-for="FirstName"></span>
            <input asp-for="FirstName" class="form-control w-75">
        </div>

        <div class="col-5">
            <label asp-for="Password"></label>
            <span asp-validation-for="Password"></span>
            <input asp-for="Password" class="form-control w-75">
        </div>
    </div>

    <div class="row d-flex mb-4">
        <div class="col-5">
            <label asp-for="LastName"></label>
            <span asp-validation-for="LastName"></span>
            <input asp-for="LastName" class="form-control w-75">
        </div>

        <div class="col-5">
            <label asp-for="ConfirmPassword"></label>
            <span asp-validation-for="ConfirmPassword"></span>
            <input asp-for="ConfirmPassword" class="form-control w-75">
        </div>
    </div>

    <div class="row d-flex mb-4">
        <div class="col-5">
            <label asp-for="Email"></label>
            <span asp-validation-for="Email"></span>
            <input asp-for="Email" class="form-control w-75">
        </div>
    </div>

    <div class="row d-flex mb-4">
        <div>
            <input type="submit" class="col-2 btn btn-primary" value="Sign Up Now">
        </div>
    </div>
</form>